<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <payment_name>
        <title>支付方式名称</title>
        <content>PayPal支付</content>
        <name_id>payment_name</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_name>
    <payment_logo>
        <title>支付方式LOGO</title>
        <content>/public/img/payment/paypal.jpg</content>
        <name_id>payment_logo</name_id>
        <input_type>image</input_type>
    </payment_logo>
    <payment_info>
        <title>支付方式简介</title>
        <content>PayPal支付国际支付账户</content>
        <name_id>payment_info</name_id>
        <input_type>textarea</input_type>
        <class>span8</class>
    </payment_info>
    <payment_type>
        <title>PayPal账户类型</title>
        <content>
            <option_1>
                <name>sandbox测试账户</name>
                <value>sandbox</value>
            </option_1>
            <option_2>
                <name>PayPal真实账户</name>
                <value>real</value>
            </option_2>
        </content>
        <name_id>payment_type</name_id>
        <input_type>select</input_type>
        <selected>real</selected>
    </payment_type>
    <payment_user>
        <title>PayPal API帐号</title>
        <content></content>
        <name_id>paypal_api_user</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_user>
    <payment_passwd>
        <title>PayPal API密码</title>
        <content></content>
        <name_id>paypal_api_passwd</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_passwd>
    <payment_sign>
        <title>PayPal API签名</title>
        <content></content>
        <name_id>paypal_api_sign</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_sign>
    <payment_show>
        <title>显示设置</title>
        <content>
            <content1>
                <name>电脑端显示</name>
                <value>pc</value>
            </content1>
            <content2>
                <name>手机端显示</name>
                <value>phone</value>
            </content2>
        </content>
        <name_id>payment_show</name_id>
        <input_type>checkbox</input_type>
        <checked>pc</checked>
        <checked>phone</checked>
    </payment_show>
    <payment_currency>
        <title>可用货币</title>
        <content>
            <content1>
                <name>美元</name>
                <value>USD</value>
            </content1>
            <content2>
                <name>加拿大元</name>
                <value>CAD</value>
            </content2>
            <content3>
                <name>欧元</name>
                <value>EUR</value>
            </content3>
            <content4>
                <name>英镑</name>
                <value>GBP</value>
            </content4>
            <content5>
                <name>日元</name>
                <value>JPY</value>
            </content5>
            <content6>
                <name>澳元</name>
                <value>AUD</value>
            </content6>
            <content7>
                <name>新西兰元</name>
                <value>NZD</value>
            </content7>
            <content8>
                <name>瑞士法郎</name>
                <value>CHF</value>
            </content8>
            <content9>
                <name>港币</name>
                <value>HKD</value>
            </content9>
            <content10>
                <name>新加坡元</name>
                <value>SGD</value>
            </content10>
            <content11>
                <name>福林</name>
                <value>HUF</value>
            </content11>
        </content>
        <name_id>payment_currency</name_id>
        <input_type>checkbox</input_type>
        <checked>USD</checked>
        <checked>CAD</checked>
        <checked>EUR</checked>
        <checked>NZD</checked>
        <checked>CHF</checked>
        <checked>HKD</checked>
    </payment_currency>
    <payment_fee>
        <title>支付手续费</title>
        <content></content>
        <name_id>payment_fee</name_id>
        <input_type>text</input_type>
        <class>span2</class>
    </payment_fee>
    <payment_state>
        <title>支付状态</title>
        <content>
            <radio_1>
                <name>开启</name>
                <value>1</value>
            </radio_1>
            <radio_2>
                <name>关闭</name>
                <value>0</value>
            </radio_2>
        </content>
        <name_id>payment_state</name_id>
        <input_type>radio</input_type>
        <checked>0</checked>
    </payment_state>
    <payment_sort>
        <title>支付排序</title>
        <content>255</content>
        <name_id>payment_sort</name_id>
        <input_type>text</input_type>
        <class>span1</class>
    </payment_sort>
    <editaction>paypal</editaction>
    <orders_state>10</orders_state>
</zend-config>
