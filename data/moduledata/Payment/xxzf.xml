<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <payment_name>
        <title>支付方式名称</title>
        <content>线下支付</content>
        <name_id>payment_name</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_name>
    <payment_logo>
        <title>支付方式LOGO</title>
        <content>/public/img/payment/xxzf.gif</content>
        <name_id>payment_logo</name_id>
        <input_type>image</input_type>
    </payment_logo>
    <payment_info>
        <title>支付方式简介</title>
        <content>线下支付</content>
        <name_id>payment_info</name_id>
        <input_type>textarea</input_type>
        <class>span8</class>
    </payment_info>
    <payment_show>
        <title>显示设置</title>
        <content>
            <content1>
                <name>全平台显示</name>
                <value>all</value>
            </content1>
        </content>
        <name_id>payment_show</name_id>
        <input_type>checkbox</input_type>
        <checked>all</checked>
    </payment_show>
    <payment_fee>
        <title>支付手续费</title>
        <content>0</content>
        <name_id>payment_fee</name_id>
        <input_type>text</input_type>
        <class>span2</class>
    </payment_fee>
    <payment_state>
        <title>支付状态</title>
        <content>
            <radio_1>
                <name>开启</name>
                <value>1</value>
            </radio_1>
            <radio_2>
                <name>关闭</name>
                <value>0</value>
            </radio_2>
        </content>
        <name_id>payment_state</name_id>
        <input_type>radio</input_type>
        <checked>1</checked>
    </payment_state>
    <payment_sort>
        <title>支付排序</title>
        <content>255</content>
        <name_id>payment_sort</name_id>
        <input_type>text</input_type>
        <class>span1</class>
    </payment_sort>
    <editaction>xxzf</editaction>
    <orders_state>10</orders_state>
</zend-config>
