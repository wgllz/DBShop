<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <payment_name>
        <title>支付方式名称</title>
        <content>支付宝支付</content>
        <name_id>payment_name</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_name>
    <payment_logo>
        <title>支付方式LOGO</title>
        <content>/public/img/payment/alipay.gif</content>
        <name_id>payment_logo</name_id>
        <input_type>image</input_type>
    </payment_logo>
    <payment_info>
        <title>支付方式简介</title>
        <content>支付宝，便捷的支付方式，大陆最好的支付系统</content>
        <name_id>payment_info</name_id>
        <input_type>textarea</input_type>
        <class>span8</class>
    </payment_info>
    <payment_user>
        <title>支付宝收款账户</title>
        <content></content>
        <name_id>payment_user</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_user>
    <payment_type>
        <title>支付宝签约接口</title>
        <content>
            <option_1>
                <name>担保交易接口</name>
                <value>create_partner_trade_by_buyer</value>
            </option_1>
            <option_2>
                <name>即时到账交易接口</name>
                <value>create_direct_pay_by_user</value>
            </option_2>
            <option_3>
                <name>标准双接口</name>
                <value>trade_create_by_buyer</value>
            </option_3>
        </content>
        <name_id>payment_type</name_id>
        <input_type>select</input_type>
        <selected>trade_create_by_buyer</selected>
    </payment_type>
    <alipay_pid>
        <title>合作者身份 Pid</title>
        <content></content>
        <name_id>alipay_pid</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </alipay_pid>
    <alipay_key>
        <title>安全校验码 Key</title>
        <content></content>
        <name_id>alipay_key</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </alipay_key>
    <payment_currency>
        <title>可用货币</title>
        <content>
            <content1>
                <name>人民币</name>
                <value>CNY</value>
            </content1>
        </content>
        <name_id>payment_currency</name_id>
        <input_type>checkbox</input_type>
        <checked>CNY</checked>
    </payment_currency>
    <payment_fee>
        <title>支付手续费</title>
        <content></content>
        <name_id>payment_fee</name_id>
        <input_type>text</input_type>
        <class>span2</class>
    </payment_fee>
    <payment_state>
        <title>支付状态</title>
        <content>
            <radio_1>
                <name>开启</name>
                <value>1</value>
            </radio_1>
            <radio_2>
                <name>关闭</name>
                <value>0</value>
            </radio_2>
        </content>
        <name_id>payment_state</name_id>
        <input_type>radio</input_type>
        <checked>0</checked>
    </payment_state>
    <payment_sort>
        <title>支付排序</title>
        <content>255</content>
        <name_id>payment_sort</name_id>
        <input_type>text</input_type>
        <class>span1</class>
    </payment_sort>
    <editaction>alipay</editaction>
    <orders_state>10</orders_state>
</zend-config>
