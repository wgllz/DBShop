<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <payment_name>
        <title>支付方式名称</title>
        <content>微信扫码支付</content>
        <name_id>payment_name</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </payment_name>
    <payment_logo>
        <title>支付方式LOGO</title>
        <content>/public/img/payment/wxpay.png</content>
        <name_id>payment_logo</name_id>
        <input_type>image</input_type>
    </payment_logo>
    <payment_info>
        <title>支付方式简介</title>
        <content>微信支付（微信扫码支付）</content>
        <name_id>payment_info</name_id>
        <input_type>textarea</input_type>
        <class>span8</class>
    </payment_info>
    <payment_type>
        <title>微信支付类型</title>
        <content>
            <option_1>
                <name>扫码支付</name>
                <value>NATIVE</value>
            </option_1>
        </content>
        <name_id>payment_type</name_id>
        <input_type>select</input_type>
        <selected>NATIVE</selected>
    </payment_type>
    <wxpay_appid>
        <title>APPID</title>
        <content></content>
        <name_id>wxpay_appid</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </wxpay_appid>
    <wxpay_mchid>
        <title>MCHID(商户号)</title>
        <content></content>
        <name_id>wxpay_mchid</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </wxpay_mchid>
    <wxpay_key>
        <title>KEY(支付密钥)</title>
        <content></content>
        <name_id>wxpay_key</name_id>
        <input_type>text</input_type>
        <class>span6</class>
    </wxpay_key>
    <payment_show>
        <title>显示设置</title>
        <content>
            <content1>
                <name>电脑端显示</name>
                <value>pc</value>
            </content1>
        </content>
        <name_id>payment_show</name_id>
        <input_type>checkbox</input_type>
        <checked>pc</checked>
    </payment_show>
    <payment_currency>
        <title>可用货币</title>
        <content>
            <content1>
                <name>人民币</name>
                <value>CNY</value>
            </content1>
        </content>
        <name_id>payment_currency</name_id>
        <input_type>checkbox</input_type>
        <checked>CNY</checked>
    </payment_currency>
    <payment_fee>
        <title>支付手续费</title>
        <content></content>
        <name_id>payment_fee</name_id>
        <input_type>text</input_type>
        <class>span2</class>
    </payment_fee>
    <payment_state>
        <title>支付状态</title>
        <content>
            <radio_1>
                <name>开启</name>
                <value>1</value>
            </radio_1>
            <radio_2>
                <name>关闭</name>
                <value>0</value>
            </radio_2>
        </content>
        <name_id>payment_state</name_id>
        <input_type>radio</input_type>
        <checked>0</checked>
    </payment_state>
    <payment_sort>
        <title>支付排序</title>
        <content>255</content>
        <name_id>payment_sort</name_id>
        <input_type>text</input_type>
        <class>span1</class>
    </payment_sort>
    <editaction>wxpay</editaction>
    <orders_state>10</orders_state>
</zend-config>